<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="SensApp web instance">
    
        <org.sensapp.android.sensappdroid.preferences.EditTextServerPreference 
            android:key="@string/pref_default_server_key"
            android:title="HTTP server"
            android:dialogTitle="Set the HTTP SensApp server"
            android:summary="Set the HTTP SensApp server"
            android:defaultValue="@string/pref_server_default_value"/>
    
        <EditTextPreference
                android:key="@string/pref_default_port_key"
                android:title="HTTP port"
                android:dialogTitle="Enter the HTTP server port"
                android:numeric="integer"
                android:defaultValue="80" />

        <org.sensapp.android.sensappdroid.preferences.EditTextServerPreference
                android:key="@string/pref_ws_server_key"
                android:title="WS server"
                android:dialogTitle="Set the WS SensApp server"
                android:summary="Set the WS SensApp server"
                android:defaultValue="@string/pref_server_ws_value"/>

        <EditTextPreference
                android:key="@string/pref_ws_port_key"
                android:title="WS port"
                android:dialogTitle="Enter the WS server port"
                android:numeric="integer"
                android:defaultValue="9000" />

    </PreferenceCategory>
</PreferenceScreen>